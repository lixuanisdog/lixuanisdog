<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d0d0d0"
    tools:context="com.example.liuye.jixuntes2.ch2.Main2Activity">
    <TextView
        android:layout_marginTop="20dp"
        android:text="空调控制"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#fff"
        android:layout_width="350dp"
        android:layout_height="550dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="#ddd"
            >
            <TextView
                android:id="@+id/test2_tv_leng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冷"
                android:textSize="28sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/test2_tv_re"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暖"
                android:textSize="28sp"
                android:textColor="#000"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/test2_btn_lengfeng"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="冷风"
                />
            <Button
                android:id="@+id/test2_btn_ruanfeng"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="软风"
                />
        </LinearLayout>
        <Button
            android:id="@+id/test2_btn_kaiguan"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电源键"
            />
    </LinearLayout>
</LinearLayout>